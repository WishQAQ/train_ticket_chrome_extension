{
    "manifest_version": 2,
    "name": "train_ticket_chrome_extension",
    "description": "火车票务系统chrome扩展",
    "version": "0.0.1",
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["hot-reload.js"]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [{
        "matches": [
            "*://*.12306.cn/*"
        ],
        "css": [
            "css/content.css"
        ],
        "js": [
            "js/content.js"
        ],
        "run_at": "document_end"
    }],
    "web_accessible_resources": ["fonts/*"]
}